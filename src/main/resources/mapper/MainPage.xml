<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
        <mapper namespace="com.petpark.mapper.MainPageMapper">
        	<!-- 뉴스 데이터 날짜 기준 최신 10개 가져오기 -->
        	<select id="selectRecentNews" resultType="com.petpark.dto.CrawlingDTO">
        		select newsId, subject, writer, date, view_count from news order by date desc limit 10
        	</select>
        	
        	<!-- 수의계 뉴스 데이터 -->
        	<select id="selectVeterinaryField" resultType="com.petpark.dto.CrawlingDTO">
        		select newsId, subject, writer, main_image, date, view_count from news where categories="veterinary_field" order by date desc;
        	</select>
        </mapper>